{
    "plugins": [
        "prettier-plugin-blade",
        "prettier-plugin-tailwindcss",
        "prettier-plugin-sh"
    ],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "printWidth": 120,
                "htmlWhitespaceSensitivity": "ignore",
                "tabWidth": 4,
                "quoteProps": "consistent",
                "trailingComma": "none"
            }
        },
        {
            "files": ["*.sh"],
            "options": {
                "parser": "sh"
            }
        }
    ]
}
